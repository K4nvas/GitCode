"Html Standar Page" :
		{
			"prefix": "html_standar",
			"body": 
			[	
				"<!DOCTYPE html>",
				"<HTML>",
				"\t<head>",
				"\t\t<meta charset=\"UTF-8\">",
				"\t\t<title>${Page Tittle}</title>",
				"\t</head>",
				"\t<body>",
				"\t\t${Page Content}",
				"\t</body>",
				"<HTML>"
			],
			"description": "Standar Page Html"
		}
	
